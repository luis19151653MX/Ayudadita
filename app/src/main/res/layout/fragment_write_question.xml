<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_write_question">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView5"
        style="@style/textoTitulo"
        android:layout_width="303dp"
        android:layout_height="88dp"
        android:layout_marginTop="72dp"
        android:text="@string/what_is_your_question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/escribePregunta"
        style="@style/textoCuerpo"
        android:layout_width="316dp"
        android:layout_height="243dp"
        android:layout_marginTop="56dp"
        android:background="@color/colorPreguntas"
        android:hint="@string/Write_question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageButton
        android:id="@+id/enviarPregunta"
        android:layout_width="75dp"
        android:layout_height="53dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_send_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/escribePregunta"
        app:layout_constraintVertical_bias="0.378" />

</androidx.constraintlayout.widget.ConstraintLayout>