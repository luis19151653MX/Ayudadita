<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ayudadita" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Ayudadita.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Ayudadita.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Ayudadita.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme"
        parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_logo</item>
    </style>

    <style name="Buton">
        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="BotonAyudadita">
        <item name="android:backgroundTint">#47525E</item>
        <item name="android:textSize">50px</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="textoCuerpo">
        <item name="android:textSize">45px</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="textoTitulo">
        <item name="android:textSize">80px</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="textoEnlace">
        <item name="android:textSize">50px</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">#03045E</item>
        <item name="android:textAlignment">textStart</item>
    </style>


</resources>